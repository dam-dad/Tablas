<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="view" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="rutaText" promptText="Introduce la ruta de un directorio" HBox.hgrow="ALWAYS" />
            <Button fx:id="listarButton" defaultButton="true" mnemonicParsing="false" onAction="#onListarAction" text="Listar" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <center>
      <TableView fx:id="ficherosTable" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nombreColumn" prefWidth="75.0" text="Nombre" />
          <TableColumn fx:id="tamanoColumn" prefWidth="75.0" text="Tamaño" />
            <TableColumn fx:id="tipoColumn" prefWidth="75.0" text="Tipo" />
            <TableColumn fx:id="modificacionColumn" prefWidth="75.0" text="Última modificación" />
            <TableColumn fx:id="ejecutableColumn" prefWidth="75.0" text="Ejecutable" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
